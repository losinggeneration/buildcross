+void __newlib_lock_acquire_recursive(__newlib_recursive_lock_t *);
+void __newlib_lock_try_acquire_recursive(__newlib_recursive_lock_t *);
+void __newlib_lock_release_recursive(__newlib_recursive_lock_t *);
+
